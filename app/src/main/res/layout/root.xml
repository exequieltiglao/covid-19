<?xml version="1.0" encoding="utf-8"?>
<com.exequieltiglao.covid.root.RootView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/orange4"
    android:layout_height="match_parent"
    tools:context=".RootActivity" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:alpha="0.8"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/doctor"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COVID-19"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:fontFamily="@font/arialbd"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/tap_here"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/tap_here"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/button_round"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Tap Here to Proceed"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:fontFamily="@font/arial"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</com.exequieltiglao.covid.root.RootView>